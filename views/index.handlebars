<main class="container">
  <h1>Eat-Da-Burger</h1>
  <div class="row">
    <div class="col-sm">
      <div class="card" style="width: 18rem;">
        <ul class="list-group list-group-flush">
          {{#each burgers}}
          {{#unless devoured}}
          <li>{{this.id}} {{this.burger_name}}
            <button class="btn btn-primary float-right change-devour" data-id="{{id}}" data-newdevour="{{devour}}">
              Devour
            </button>
          </li>
          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="col-sm">
      <div class="card" style="width: 18rem;">
        <ul class="list-group list-group-flush">
          {{#each burgers}}
          {{#if devoured}}
          <li>{{this.id}} {{this.burger_name}}</li>
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      Add form here
    </div>
  </div>
</main>

