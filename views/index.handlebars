<main class="container">
  <h1>Eat-Da-Burger</h1>
  <div class="row">
    <div class="col-sm-6">
      <div class="card" style="width: 18rem;">
        <ul class="list-group list-group-flush">
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card" style="width: 18rem;">
        <ul class="list-group list-group-flush">
          {{#each burgers}}
          {{#if devoured}}
          <li>{{this.id}} {{this.burger_name}}</li>
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm">
      <form class="create-form">
        <div class="form-group row justify-content-center">
                  <h2>Add a burger</h2>
          {{!-- <label for="ca">Enter a burger name:</label> --}}
          <input type="text" id="daburger" name="name">
          <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </div>
  </div>
</main>